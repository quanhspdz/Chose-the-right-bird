    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/imgUBird1"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/red2"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/imgUBird2"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/red2"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/imgUBird3"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/red2"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearTouchable"
        android:orientation="vertical"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtHint"
                android:text="Tap to choose the bird in right order!"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#3F51B5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:weightSum="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imgMainChosenBird1"
                    android:layout_height="match_parent"
                    android:src="@drawable/red2"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgMainChosenBird2"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/red2"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgMainChosenBird3"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/red2"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>